<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.landingPage {
			background-image: url(images/trees.jpg);
    		background-repeat:no-repeat;
   		 	background-size: cover;
		}
	</ui:style>
		
	<g:DockLayoutPanel styleName="{style.landingPage}" ui:field='dockLayoutPanel' unit="EM" width="100%" height="">
	
	    <g:north size='3'>
        	<g:DockPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
        		<g:Dock direction="WEST">
        			<g:VerticalPanel width="100%" verticalAlignment="ALIGN_MIDDLE">
        				<g:Button>L</g:Button>
        			</g:VerticalPanel>
        		</g:Dock>
        		<g:Dock direction="EAST">
        			<g:VerticalPanel horizontalAlignment="ALIGN_RIGHT" width="100%" verticalAlignment="ALIGN_MIDDLE">
        				<g:Button ui:field='rBtn'>R</g:Button>
        			</g:VerticalPanel>
        		</g:Dock>
        	</g:DockPanel>
    	</g:north>
    
		<g:south size='5'>
	        <g:HorizontalPanel width="100%" height="5" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
	        	<g:Button ui:field='makeStuffHappenBtn'>Make Stuff Happen</g:Button> 
	        </g:HorizontalPanel>
	    </g:south>
	    
	</g:DockLayoutPanel>
</ui:UiBinder> 
