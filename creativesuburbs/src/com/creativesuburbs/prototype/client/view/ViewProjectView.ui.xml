<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:SimplePanel width="100%" height="100%">
		<g:VerticalPanel width="100%" spacing="5" height="402px">
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" borderWidth="1" width="100%">
				<g:Label ui:field="projectNameLbl" text="Fill This Label"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="" borderWidth="1" verticalAlignment="ALIGN_MIDDLE">
				<g:SimplePanel width="100px" height="100px">
					<g:Image width="100%" height="100%" ui:field="userImg" url="images/facebook-blank-photo.jpg"/>
				</g:SimplePanel>
				<g:Hyperlink text="Sam" targetHistoryToken="newHistoryToken"/>
				<g:HTML wordWrap="true" ui:field="userDescriptionHTML"> wants to </g:HTML>
				<g:VerticalPanel spacing="10" horizontalAlignment="ALIGN_CENTER">
					<g:Label text="Social Media Stuff"/>
					<g:Button text="Me Too!"/>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel borderWidth="1" spacing="5">
				<g:SimplePanel width="200px" height="150px">
					<g:Image ui:field="projectImg" width="200px" height="150px"/>
				</g:SimplePanel>
				<g:VerticalPanel spacing="3">
					<g:Label text="Tags:"/>
					<g:Button height="25px">: Outdoor</g:Button>
					<g:Button height="25px">: Gym</g:Button>
					<g:Label text="Supporters:"/>
					<g:Hyperlink text="Peter" targetHistoryToken="newHistoryToken"/>
					<g:Hyperlink text="Jenn" targetHistoryToken="newHistoryToken"/>
				</g:VerticalPanel>
				<g:SimplePanel>
					<g:Image width="100%" height="100%" url="images/map-screenshot.png"/>
				</g:SimplePanel>
			</g:HorizontalPanel>
			<g:Button text="Back To Projects" ui:field="backToProjectsButton"/>	
		</g:VerticalPanel> 
	</g:SimplePanel>
</ui:UiBinder> 